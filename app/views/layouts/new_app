    <div id="control"></div>

<script type="text/javascript"> 
$(function () {
    var data = [];
    for (var i = 0; i < 100; i += 1)
        data.push([i, Math.sin(i/10)]);
 
    $.plot($("#graph"), [ {
        label: "Wave",
        color: '#0000ff',
        data: data,
        points: { show: true }
      } ]);
});
</script> 
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>

    <%= yield %>
    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
  </div>
